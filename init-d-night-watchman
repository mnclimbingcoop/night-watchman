#!/bin/sh

### BEGIN INIT INFO
# Provides:        night-watchman
# Required-Start:  $network $remote_fs $syslog
# Required-Stop:   $network $remote_fs $syslog
# Default-Start:   2 3 4 5
# Default-Stop:    0 1 6
# Short-Description: Start NTP daemon
### END INIT INFO

# To enable this script:
#    sudo update-rc.d night-watchman defaults

PATH=/sbin:/bin:/usr/sbin:/usr/bin

. /lib/lsb/init-functions

ARTIFACT=night-watchman
INSTALL_PATH=/usr/local/${ARTIFACT}
DAEMON=/usr/bin/java
JAVA_OPTS="-server -Xms512m -Xmx512m -jar ${INSTALL_PATH}/.${ARTIFACT}/${ARTIFACT}.jar"
PIDFILE=/var/run/${ARTIFACT}.pid

test -x $DAEMON || exit 5

if [ -r /etc/default/${ARTIFACT} ]; then
    . /etc/default/${ARTIFACT}
fi

RUNASUSER=pi

case $1 in
    start)
        log_daemon_msg "Starting Night Watchman server" "${ARTIFACT}"
          start-stop-daemon --start \
                        --oknodo \
                        --chdir $INSTALL_PATH \
                        --background \
                        --pidfile $PIDFILE \
                        --make-pidfile \
			--chuid ${RUNASUSER} \
                        --exec $DAEMON -- ${JAVA_OPTS}
        status=$?
        log_end_msg $status
        ;;
    stop)
        log_daemon_msg "Stopping Night Watchman server" "${ARTIFACT}"
          start-stop-daemon --stop --quiet --oknodo --pidfile $PIDFILE
        log_end_msg $?
        rm -f $PIDFILE
        ;;
    restart|force-reload)
        $0 stop && sleep 2 && $0 start
        ;;
    try-restart)
        if $0 status >/dev/null; then
            $0 restart
        else
            exit 0
        fi
        ;;
    reload)
        exit 3
        ;;
    status)
        status_of_proc $DAEMON "Night Watchman server"
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|try-restart|force-reload|status}"
        exit 2
        ;;
esac
pi@raspberrypi ~ $
